<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/darker_gray"
    tools:context=".MainActivity">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp"
        android:background="@android:color/white">
        <Spinner
            android:id="@+id/spinner_language_from"
            android:spinnerMode="dropdown"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>
        <ImageView
            android:id="@+id/image_swap"
            android:layout_width="0dp"
            android:layout_weight="0.09"
            android:layout_height="match_parent"
            android:src="@drawable/ic_swap_horiz_black_24dp"
            android:tint="@color/colorDarkGray" />
        <Spinner
            android:id="@+id/spinner_language_to"
            android:spinnerMode="dropdown"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <EditText
        android:id="@+id/text_input"
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp"
        android:paddingBottom="30dp"
        android:textSize="@dimen/translate_text_size"
        android:gravity="top"
        android:hint="@string/hint_text"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:gravity="right"
        android:layout_marginBottom="1dp"
        android:background="@android:color/white">
        <ImageView
            android:id="@+id/image_listen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_mic_black_24dp"
            android:tint="@android:color/darker_gray"
            android:layout_margin="8dp"/>
        <ImageView
            android:id="@+id/clear_text"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_clear_black_24dp"
            android:tint="@android:color/darker_gray"
            android:layout_margin="8dp"/>
        <ImageView
            android:id="@+id/enter_text"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:onClick="onClickTransImage"
            android:src="@drawable/ic_enter"
            android:tint="@android:color/darker_gray" />
    </LinearLayout>
    <TextView
        android:id="@+id/text_ouput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:background="@android:color/white"
        android:gravity="top"
        android:padding="16dp"
        android:paddingBottom="30dp"
        android:scrollbars="vertical"
        android:textColor="@android:color/darker_gray"
        android:text="Answer"
        android:layout_marginBottom="1dp"
        android:textSize="@dimen/translate_text_size" />
    <ListView
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:id="@+id/list_item"
        android:background="@android:color/white"
        android:layout_weight="20" />
</LinearLayout>